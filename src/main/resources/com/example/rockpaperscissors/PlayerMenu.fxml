<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rockpaperscissors.PlayerMenuController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="1000.0">
         <image>
            <Image url="@background.jpg" />
         </image>
      </ImageView>
      <Label fx:id="player1Label" alignment="CENTER" layoutX="278.0" layoutY="99.0" text="Player1, its your turn!">
         <font>
            <Font name="SF Pro Rounded Bold" size="50.0" />
         </font>
      </Label>
      <Label layoutX="318.0" layoutY="423.0" text="Rock">
         <font>
            <Font name="SF Pro Rounded Bold" size="25.0" />
         </font>
      </Label>
      <Label layoutX="482.0" layoutY="423.0" text="Paper">
         <font>
            <Font name="SF Pro Rounded Bold" size="25.0" />
         </font>
      </Label>
      <Label layoutX="630.0" layoutY="423.0" text="Scissors">
         <font>
            <Font name="SF Pro Rounded Bold" size="25.0" />
         </font>
      </Label>
      <HBox layoutX="290.0" layoutY="466.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#btRockPressed" style="-fx-background-color: black; -fx-background-radius: 30;">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@rock.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#btPaperPressed" style="-fx-background-color: black; -fx-background-radius: 30;">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@paper.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#btScissorsPressed" style="-fx-background-color: black; -fx-background-radius: 30;">
               <graphic>
                  <ImageView>
                     <image>
                        <Image url="@scissors.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
